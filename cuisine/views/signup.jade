extends layout
block content
   .jumbotron
      form.form-signin(action="/", method="get")
         h2.form-signin-heading(align="center") Welcome to Cuisine
         div(align="center")
             input.input-block-level(type="text", name="username", placeholder="username")
             input.input-block-level(type="password", name="password", placeholder="Password")
             input.input-block-level(type="password", name="confirm_pwd", placeholder="Confirm Password")
             label.checkbox.
                <input type="checkbox" value="remember-me" /> Remember me
             button.btn.bit-large.btn-primary(type="submit") Sign up
